<Window x:Class="WpfApp1.Windows.Student_Group"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Windows"
        mc:Ignorable="d"
        Title="Student_Group" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Label Content="Студент"/>
                <ComboBox>
                    
                </ComboBox> 
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Группа"/>
                <ComboBox>

                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Content="Отменить" x:Name="Cancel" Click="Cancel_Click"/>
                <Button Content="Добавить" x:Name="addStudent" Click="addStudent_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
